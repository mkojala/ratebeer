<div class="navibar">
    <%= link_to 'Breweries', breweries_path %>
    <%= link_to 'Beers', beers_path %>
    <%= link_to 'Ratings', ratings_path %>
    <%= link_to 'Users', users_path %>
    <%= link_to 'Beer Clubs', beer_clubs_path %>
    <%= ' | ' %>
    <% if current_user %> 
    <%= link_to current_user.username, user_path(current_user) %> 
    <%= link_to 'Rate a beer', new_rating_path %>
    <%= link_to 'Join a club', new_membership_path %>
    <%= link_to 'Sign out', signout_path, method: :delete, data: { confirm: 'Are you sure?' }%>
    <% end %>
    <% if not current_user %>
    <%= link_to 'Sign in', signin_path %> 
    <%= link_to 'Sign up', signup_path %> 
    <% end %>

   
  </div>

  <%= yield %>
</body>
